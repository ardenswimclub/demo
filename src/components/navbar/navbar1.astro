---
import { withBase } from "@/utils/url";
import Accordion from "./accordion.astro";
const { menuItems,heading, class: className } = Astro.props;

function mapChildrenPaths(children) {
  return children.map(o => {
    return {title: o.title, path: withBase(o.path)}
  });
}
---

<div id="menu-container" class:list={[`
    lg:w-auto 
    items-center 
    justify-center
    flex `,className]}>  
    <b class="border-b-3 mr-4 border-transparent">{heading}</b>
  <ul class="flex  flex-col flex-wrap md:flex-row md:gap-3 
    items-center justify-center 
  ">
  
  {menuItems.map((item,index) => (
    <>
      <li>
        <a
          href={withBase(item.path)}          
          target={item.blank ? '_blank' : undefined}
          rel={item.blank ? 'noopener' : undefined}
          class="flex lg:px-1 my-2 items-center 
            text-gray-600 hover:text-gray-900 
            border-b-3 border-b-transparent hover:border-yellow-400">
          <span>{item.title}</span>                      
        </a>
      </li>
    </>
  ))}
  </ul>

</div>
